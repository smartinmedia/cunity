<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <db>
        <params>
            <host>localhost</host>
            <username></username>
            <password></password>
            <dbname></dbname>
            <table_prefix>cunity</table_prefix>
        </params>
    </db>
    <mail>
        <smtp>1</smtp>
        <params>
            <host></host>
            <port></port>
            <auth></auth>
            <username></username>
            <password></password>
            <ssl>ssl</ssl>
        </params>
        <sendername>NewCunity</sendername>
        <sendermail>noreply@test.cunity.net</sendermail>
    </mail>
    <images>
        <width>1500</width>
        <height>1000</height>
        <keepRatio>1</keepRatio>
        <keepSmaller>1</keepSmaller>
    </images>
    <previewImages>
        <width>500</width>
        <height>300</height>
        <keepRatio>1</keepRatio>
        <keepSmaller>1</keepSmaller>
    </previewImages>
    <site>
        <tpl_debug>0</tpl_debug>
        <upload_limit>10MB</upload_limit>
        <version>2.0.0</version>
    </site>
    <registerFunctions>
        <module>Search</module>
        <module>Newsfeed</module>
    </registerFunctions>
</zend-config>
